#!/bin/zsh

export ZSH=~/.dotfiles

# Set up editors
export EDITOR=vim
export VISUAL=vim

# UTF-8 for everything, all the time.
export LC_ALL="en_US.UTF-8"

# Add common path locations
typeset -U path
path=(~/bin $ZSH/bin /opt/local/bin /opt/local/sbin $path)
export PATH
export MANPATH=""
export DYLD_FALLBACK_LIBRARY_PATH=/opt/local/lib

if [[ -f ~/.zshenv.local ]]; then
    source ~/.zshenv.local
fi
