#!/bin/zsh

if [[ -f ~/.local/bin/upspin ]]; then
    return
fi

if ! [[ -d ~/.local/bin ]]; then
    @ mkdir -p ~/.local/bin
fi

case $OS in
    osx) URL=https://upspin.io/dl/upspin.darwin_amd64.tar.gz ;;
    linux) URL=https://upspin.io/dl/upspin.linux_amd64.tar.gz ;;
    *) return
esac
@ sh -c "curl -s $URL | tar xv -C ~/.local/bin/ --exclude=README"
