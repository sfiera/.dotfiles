#!/bin/zsh

set -o errexit
set -o nounset

zparseopts -D \
    n+=dry_run \
    t+=transcode

RSYNC=(rsync -rtv --delete --exclude=".*")
TRANSCODE=(transcode)

if [[ $#dry_run > 0 ]]; then
    RSYNC=($RSYNC -n)
    TRANSCODE=($TRANSCODE -n)
fi

if [[ $# > 0 ]]; then
    while [[ $# > 0 ]]; do
        RSYNC=($RSYNC --include="**/$1/**")
        shift
    done
    RSYNC=($RSYNC --include='*/' --exclude='*')
fi

@() {
    echo "$@"
    "$@"
}

if [[ $#transcode > 0 ]]; then
    @ $TRANSCODE
fi
if [[ -e ~/Music/Library/ ]]; then
    @ $RSYNC courtain::mp3-192k ~/Music/Library/
fi
if [[ -e ~/Music/Mobile/ ]]; then
    @ $RSYNC courtain::mp3-96k ~/Music/Mobile/
fi
