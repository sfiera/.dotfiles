#!/bin/zsh

RSYNC=(rsync -rtv --delete --iconv=UTF-8-MAC,UTF8)
if [[ $# > 0 ]]; then
    while [[ $# > 0 ]]; do
        RSYNC=($RSYNC --include=$1)
        shift
    done
    RSYNC=($RSYNC --include='*/' --exclude='*')
fi

if [[ -e ~/Music/Library/ ]]; then
    echo $RSYNC a.sfiera.net:mp3/192/ ~/Music/Library/
    $RSYNC a.sfiera.net:mp3/192/ ~/Music/Library/
fi
if [[ -e ~/Music/Mobile/ ]]; then
    echo $RSYNC a.sfiera.net:mp3/96/ ~/Music/Mobile/
    $RSYNC a.sfiera.net:mp3/96/ ~/Music/Mobile/
fi
