#!/bin/zsh

usage() {
    echo >&2 "usage: vundle install"
    echo >&2 "       vundle update"
    echo >&2 "       vundle clean"
    exit 64
}

if [[ $# != 1 ]]; then
    usage
fi

COMMAND=$1; shift
case $COMMAND in
    install)    vim +PlugInstall +qall ;;
    update)     vim +PlugInstall! +qall ;;
    clean)      vim +PlugClean +qall ;;
    status)     vim +PlugStatus ;;
    *)          usage ;;
esac
