#!/bin/zsh

set -o errexit
set -o nounset

case $# in
    0) BRANCHES=($(/usr/bin/git symbolic-ref --short HEAD)) ;;
    *) BRANCHES=($@) ;;
esac

for BRANCH in $BRANCHES; do
    HASH=$(/usr/bin/git rev-parse $BRANCH)
    git push -f github $BRANCH:$BRANCH
    git config branch.$BRANCH.last-upload-hash $HASH
done
